{

    "manifest_version": 2,
    "name": "class notification",
    "description": "basic start of a class notification for daan.ir",
    "version": "1.0",
    "homepage_url": "https://github.com/ohinibla/class-notification.git",
    "icons": {
      "48": "icons/bell-48.png",
      "96": "icons/bell-96.png"
    },

    "permissions": [
      "notifications",
      "https://srbiau.daan.ir/session-list*"
    ],

    "background": {
      "scripts": ["background-script.js"]
    },
    
    "browser_action": {
        "default_icon": "icons/bell-48.png",
        "default_title": "uninoti",
        "default_popup": "popup/popup.html",
        "browser_style": true
    }

}
